<?xml version="1.0" encoding="utf-8"?>
<extension version="1.5" type="plugin" group="content" method="upgrade">
	<name>Content - External Link Target</name>
	<author>Benjamin / JoniJnm</author>
	<creationDate>3 Mar 2011</creationDate>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorUrl>/www.jonijnm.es</authorUrl>
	<version>2.0</version>
	<description>External Links Target</description>
	<files>
		<filename plugin="external_links_target">external_links_target.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="list" name="external_links" default="1" label="Add target=&quot;_blank&quot; to external links" description="External links will open in a seperate page">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field type="list" name="downloadable_links" default="1" label="Add target=&quot;_blank&quot; to downloadable links" description="Uses the extension list in configuration.php / Media: Allowed Extensions.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
    	 <!--   <server type="extension" priority="1" name="Github Project Page">http://example.com/extension.xml</server> -->
	</updateservers>
</extension>
